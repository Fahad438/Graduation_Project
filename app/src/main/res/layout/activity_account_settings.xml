<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".AccountSettings">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="69dp"
        android:src="@drawable/default_profile"
        app:civ_border_color="@color/blue"
        app:civ_border_width="6dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-55dp"
        android:visibility="gone"
        android:layout_marginStart="60dp"
        app:srcCompat="@drawable/ic_edit"
        android:foreground="?android:attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:maxLines="1"
        android:paddingTop="15dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/editWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/red"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/emailTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Email"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/emailEdit"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_marginLeft="50dp"
        android:background="@drawable/text"
        android:padding="10dp" />


    <ImageView
        android:id="@+id/btnEdit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_edit"
        android:translationX="150dp"
        android:translationY="-35dp"
        android:backgroundTint="@color/blue"
        android:foreground="?android:attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/passTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:text="Password"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/passConfirm"
        android:layout_width="311dp"
        android:layout_height="40dp"
        android:background="@drawable/text"
        android:inputType="textPassword"
        android:visibility="gone"
        android:padding="10dp" />

    <TextView
        android:id="@+id/oldPassTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:text="Old password"
        android:textSize="17sp"/>

    <EditText
        android:id="@+id/oldPass"
        android:layout_width="311dp"
        android:layout_height="40dp"
        android:background="@drawable/text"
        android:visibility="gone"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/newPassTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:text="New password"
        android:textSize="17sp"/>

    <EditText
        android:id="@+id/newPass"
        android:layout_width="311dp"
        android:layout_height="40dp"
        android:background="@drawable/text"
        android:visibility="gone"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/cPassTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:text="Confirm new password"
        android:textSize="17sp"/>

    <EditText
        android:id="@+id/cPass"
        android:layout_width="311dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:background="@drawable/text"
        android:inputType="textPassword"
        android:padding="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/changePass"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/blue_btn"
        android:paddingBottom="3dp"
        android:text="change password"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveEmail"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/blue_btn"
        android:visibility="gone"
        android:paddingBottom="3dp"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveProfilePic"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/blue_btn"
        android:visibility="gone"
        android:paddingBottom="3dp"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/savePass"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/blue_btn"
        android:visibility="gone"
        android:paddingBottom="3dp"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/manageAdmins"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_btn"
        android:paddingBottom="3dp"
        android:visibility="gone"
        android:text="Manage admins"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/red"
        android:paddingBottom="3dp"
        android:visibility="gone"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="17sp"/>

</LinearLayout>