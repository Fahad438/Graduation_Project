<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddLesson"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Add lessons"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textColor="@color/red"
        android:textSize="15sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapter Number: "
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <Spinner
        android:id="@+id/chapterNum"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:paddingStart="10dp"
        android:background="@drawable/drop_down_test" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_gravity="start"
        android:text="Lesson Number:"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editTextLessonNum"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text"
        android:paddingRight="10dp"
        android:paddingStart="15dp"
        android:hint="Enter lesson Number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_gravity="start"
        android:text="Lesson Title:"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editTextTextLessonTitle"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text"
        android:paddingRight="10dp"
        android:paddingStart="15dp"
        android:hint="Enter lesson title"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="start"
        android:text="Content:"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editTextTextContent"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:hint="Enter content link"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_btn"
        android:id="@+id/btnAddLessons"
        android:text="Add lesson"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:paddingBottom="5dp"/>
        </LinearLayout>

    </ScrollView>


</LinearLayout>